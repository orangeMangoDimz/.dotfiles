// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
    // ============================================================================
    // Workspace Navigation
    // ============================================================================
    {
        "context": "Workspace",
        "bindings": {
            // Pane navigation
            "ctrl-h": "workspace::ActivatePaneLeft",
            "ctrl-l": "workspace::ActivatePaneRight",
            "ctrl-k": "workspace::ActivatePaneUp",
            "ctrl-j": "workspace::ActivatePaneDown",

            // Dock size adjustment
            "shift-alt-l": "workspace::IncreaseOpenDocksSize",
            "shift-alt-h": "workspace::DecreaseOpenDocksSize",

            // Unbind default terminal toggle
            "alt-t": null
        }
    },

    // ============================================================================
    // Vim Mode - Normal
    // ============================================================================
    {
        "context": "vim_mode == normal && !menu",
        "bindings": {
            // Breakpoint
            "space b t": "editor::ToggleBreakpoint",
            "j": ["vim::Down", { "display_lines": true }],
            "k": ["vim::Up", { "display_lines": true }],

            // File operations
            "space f f": "file_finder::Toggle",
            "space f w": "pane::DeploySearch",
            "space f m": "editor::Format",
            "space f c": "project_panel::CollapseAllEntries",

            // Code actions
            "space c a": "editor::ToggleCodeActions",
            "space c r": "editor::Rename",
            "space c d": "diagnostics::Deploy",

            // Explorer/Panels
            "space e t": "workspace::ToggleRightDock",
            "space e e": "project_panel::ToggleFocus",
            "space e p": "outline::Toggle",

            // Window management
            "space h": "pane::SplitRight",
            "space v": "pane::SplitDown",
            "space x": "pane::CloseActiveItem",
            // "space d b": "pane::CloseAllItems",
            "space w w": "editor::ToggleSoftWrap",

            // Pane resizing (similar to Cursor)
            "alt-shift-l": "vim::ResizePaneRight",
            "alt-shift-h": "vim::ResizePaneLeft",

            // Claude Code agent
            "space a t": "agent::NewThread",

            // Navigation
            "g b": "pane::GoBack",
            "g r": "editor::FindAllReferences",
            "ctrl-h": "workspace::ActivatePaneLeft",
            "ctrl-l": "workspace::ActivatePaneRight",
            "ctrl-k": "workspace::ActivatePaneUp",
            "ctrl-j": "workspace::ActivatePaneDown",

            // Error navigation
            "] e": "editor::GoToDiagnostic",
            "[ e": "editor::GoToPreviousDiagnostic",

            // Git - Hunk navigation
            "] h": "editor::GoToHunk",
            "[ h": "editor::GoToPreviousHunk",

            // Git - Actions
            "space g h d": "editor::ToggleSelectedDiffHunks",
            "space g h r": "git::Restore",

            // Markdown
            "space m p": "markdown::OpenPreview",
            "space m P": "markdown::OpenPreviewToTheSide",

            // Notifications
            "space n c": "workspace::ClearAllNotifications"
        }
    },

    // ============================================================================
    // Vim Mode - Visual
    // ============================================================================
    {
        "context": "vim_mode == visual && !menu",
        "bindings": {
            "shift-j": "editor::MoveLineDown",
            "shift-k": "editor::MoveLineUp"
        }
    },

    // ============================================================================
    // Vim Mode - Insert
    // ============================================================================
    {
        "context": "vim_mode == insert",
        "bindings": {
            // Uncomment to enable jj to exit insert mode
            // "j j": "vim::NormalBefore"
        }
    },

    // ============================================================================
    // Terminal
    // ============================================================================
    {
        "context": "Terminal",
        "bindings": {
            // Pane navigation
            "ctrl-h": "workspace::ActivatePaneLeft",
            "ctrl-l": "workspace::ActivatePaneRight",
            "ctrl-k": "workspace::ActivatePaneUp",
            "ctrl-j": "workspace::ActivatePaneDown",

            // Terminal tab navigation
            "ctrl-shift-j": "pane::ActivateNextItem",
            "ctrl-shift-k": "pane::ActivatePreviousItem",

            // Zoom
            "ctrl-shift-f": "workspace::ToggleZoom",

            // Unbind default terminal toggle
            "alt-t": null
        }
    },

    // ============================================================================
    // Project Panel
    // ============================================================================
    {
        "context": "projectpanel && not_editing",
        "bindings": {
            "enter": "project_panel::Open"
        }
    },
    {
        "context": "ProjectPanel && not_editing",
        "bindings": {
            "r": "project_panel::Rename",
            "a": "project_panel::NewFile",
            "d": "project_panel::Delete",
            "x": "project_panel::Cut",
            "c": "project_panel::Copy",
            "p": "project_panel::Paste"
        }
    },

    // ============================================================================
    // Editor
    // ============================================================================
    {
        "context": "(Editor && mode == full)",
        "bindings": {
            "alt-l": "agent::ToggleFocus"
        }
    },

    // ============================================================================
    // Agent Panel
    // ============================================================================
    {
        "context": "(AgentPanel && prompt_editor)",
        "bindings": {
            "alt-t": "agent::NewThread",
            "ctrl-alt-t": null
        }
    },
    {
        "context": "(AgentPanel && external_agent_thread)",
        "bindings": {
            "alt-t": "agent::NewThread",
            "ctrl-alt-t": null
        }
    },
    {
        "context": "(AgentPanel && acp_thread)",
        "bindings": {
            "ctrl-alt-t": null
        }
    },
    {
        "context": "(AgentPanel && text_thread)",
        "bindings": {
            "ctrl-alt-t": null
        }
    },
    {
        "context": "AgentPanel",
        "bindings": {
            "alt-h": "agent::OpenHistory",
            "alt-f": "agent::ExpandMessageEditor",
            "ctrl-alt-/": null,
            "ctrl-shift-h": null,
            "alt-shift-escape": null
        }
    },
    {
        "context": "((AgentPanel || ContextEditor) || MessageEditor > Editor)",
        "bindings": {
            "alt-m": "agent::ToggleModelSelector",
            "alt-shift-t": "agent::NewThread",
            "ctrl-/": null,
            "ctrl-r": null
        }
    },

    // ============================================================================
    // File Finder & Search
    // ============================================================================
    {
        "context": "((FileFinder || FileFinder > Picker > Editor) || FileFinder > Picker > menu)",
        "bindings": {
            // Keep ctrl-h disabled in file finder to allow backspace-like behavior
            // "ctrl-h": null
        }
    },
    {
        "context": "BufferSearchBar",
        "bindings": {
            // Keep ctrl-h disabled in search bar to allow backspace-like behavior
            // "ctrl-h": null
        }
    },
    {
        "context": "!Terminal",
        "bindings": {
            "ctrl-shift-c": null
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "f9": null
        }
    }
]
